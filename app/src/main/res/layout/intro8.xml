<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-3dp"
        android:src="@drawable/camera_manuell" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="336dp"
        android:layout_height="128dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="35dp"
        android:text="You can steer with touching the buttons, but this time you can change between the hard and soft mode of driving, which means that the strength of steering the car changes. You can enable the camera too."
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <TextView
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="67dp"
        android:layout_marginBottom="114dp"
        android:text="In both Modi the color of the button changes automatically if the screen is too dark"
        android:textSize="18dp"
        android:textColor="@android:color/white">

    </TextView>

</RelativeLayout>

